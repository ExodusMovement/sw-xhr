{
  "name": "xhr-fetch-polyfill",
  "version": "0.0.1",
  "description": "Polyfill XML Http Request api with fetch",
  "main": "index.js",
  "scripts": {
    "prepublishOnly": "npm test && npm run build",
    "lint": "tslint -c tslint.json ./src/**/*.ts",
    "pretest": "npm run build:test",
    "test": "npm run test:coverage",
    "posttest": "npm run lint",
    "test:unit": "node test.js",
    "test:coverage": "istanbul cover test.js",
    "build": "npm run build:ts && npm run build:index && npm run build:declarations",
    "build:ts": "tsc --outDir ./built --declaration",
    "build:declarations": "mv built/src/index.d.ts ./index.d.ts",
    "build:index": "rollup -c -o index.js -i src/index.ts",
    "build:test": "rollup -c -o test.js -i test/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/markis/xhr-fetch-polyfill.git"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "LICENSE.md",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "whitespace",
    "strings",
    "xhr-fetch-polyfill",
    "minification"
  ],
  "author": "Markis Taylor <m@rkis.cc>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/markis/xhr-fetch-polyfill/issues"
  },
  "homepage": "https://github.com/markis/xhr-fetch-polyfill#readme",
  "dependencies": {
    "typescript": "2.7.2"
  },
  "devDependencies": {
    "istanbul": "0.4.5",
    "rollup": "0.56.2",
    "rollup-plugin-typescript": "0.8.1",
    "tslint": "5.8.0"
  }
}
